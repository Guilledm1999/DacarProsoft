
@{
    ViewBag.Title = "ReporteIngresosChatarraPorFechas";
    Layout = "~/Views/Compartida/_Layout.cshtml";
}
<style>
    .dx-datagrid {
        font: 12px Montserrat;
    }

    .dx-datagrid-headers .dx-header-row {
        color: black;
        font-family: Montserrat;
        font-size: 13px;
    }

    .dx-datagrid-headers .dx-header-row {
        font: 12px arial;
        background-color: #D7F1FF;
        /*background-color: #3355FF;*/
        color: black;
        font-weight: bold;
    }

    .dx-data-row {
        font-size: 10pt;
        padding: 2pt;
    }

    .dx-datagrid-content .dx-datagrid-table .dx-row .dx-editor-cell {
        vertical-align: top;
    }
</style>
<br />

<div class="card shadow align-top">
    <div class="card-header">
        <h2>Reporte Ingresos Chatarra Por Fechas</h2>
        <br />
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <h6>Filtro Busqueda</h6>
                    <select class="form-control" aria-label="Default select example" id="OpcionFiltrado">
                        <option value="1">Pesos Individuales</option>
                        <option value="2">Pesos Totales</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <h6>Fecha Inicio</h6>
                    <input id="txtFechaInicio" class="date-picker form-control" placeholder="dd/mm/yyyy" type="date" required="required" onfocus="this.type='date'">
                </div>
                <div class="col-md-2">
                    <h6>Fecha Fin</h6>
                    <input id="txtFechaFin" class="date-picker form-control" placeholder="dd/mm/yyyy" type="date" required="required" onfocus="this.type='date'">
                </div>

                <div class="col-md-2">
                    <h6>  </h6>
                    <button class="btn btn-primary" onclick="ConsultarReporte()">
                        <i class="loading-icon fa fa-spinner fa-spin hide"></i>
                        <span class="btn-txt">Consultar</span>
                    </button>
                </div>
                @*<div id="gridClearSelection"></div>*@
            </div>
        </div>
    </div>
    <div class="card-body">
        <div id="MensajeErrorInesperado" class="alert alert-danger collapse">
            <button id="LinkClose2" type="button" class="close">&times;</button>
            <strong>Error Inesperado!</strong>
        </div>
        <div id="MensajeActulalizacionCorrecta" class="alert alert-primary collapse">
            <button id="LinkClose9" type="button" class="close">&times;</button>
            <strong>Actualizacion exitosa</strong>
        </div>
        <div id="IngresosdeChatarras"></div>
    </div>
</div>

