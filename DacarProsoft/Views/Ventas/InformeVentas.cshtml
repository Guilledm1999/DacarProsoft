
@{
    ViewBag.Title = "InformeVentas";
    Layout = "~/Views/Compartida/_Layout.cshtml";
}
@{
    var ani = ViewBag.anios;
}

@{
    var mes = ViewBag.meses;
}
<style>
    .dx-datagrid {
        font: 12px Montserrat;
    }

    .dx-datagrid-headers .dx-header-row {
        color: black;
        font-family: Montserrat;
        font-size: 13px;
    }

    .dx-datagrid-headers .dx-header-row {
        font: 12px arial;
        background-color: #D7F1FF;
        /*background-color: #3355FF;*/
        color: black;
        font-weight: bold;
    }

    .dx-data-row {
        font-size: 10pt;
        padding: 2pt;
    }

    .dx-datagrid-content .dx-datagrid-table .dx-row .dx-editor-cell {
        vertical-align: top;
    }
</style>
<br />
<div class="card shadow align-top">
    <div class="card-header">
        <h2>Listado de Ventas</h2>
        <br />
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <h6>Año de busqueda</h6>
                    @Html.DropDownList("Anio", new SelectList(ani, "Value", "Text"), new { @class = "form-control", id = "anioClass" })
                </div>
                <div class="col-md-2">
                    <h6>Mes de busqueda</h6>
                    @Html.DropDownList("Mes", new SelectList(mes, "Orden", "Nombre"), "--Todos--", new { @class = "form-control", id = "mesesClass"})
                </div>

                <div class="col-md-2">
                    <h6>  </h6>
                    <button class="btn btn-primary" onclick="ConsultaDeVentas()">
                        <i class="loading-icon fa fa-spinner fa-spin hide"></i>
                        <span class="btn-txt">Consultar</span>
                    </button>
                </div>
                <div id="gridClearSelection"></div>
            </div>
        </div>          
    </div>

    <div class="card-body">
        <div id="MensajeErrorInesperado" class="alert alert-primary collapse">
            <button id="LinkClose" type="button" class="close">&times;</button>
            <strong>Error Inesperado!</strong>
        </div>
        <div class="loader">
            <div id="tblSumary"> </div>
            <div id="tblVentasTotales"> </div>
        </div>
    </div>
</div>

