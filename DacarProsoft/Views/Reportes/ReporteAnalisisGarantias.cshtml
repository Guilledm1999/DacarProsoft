
@{
    ViewBag.Title = "ReporteAnalisisGarantias";
    Layout = "~/Views/Compartida/_Layout.cshtml";
}
@{
    var FiltroBusqueda = ViewBag.FiltroBusqueda;
}

<br />
<div class="card shadow align-top">
    <div class="card-header">
        <h2>Reporte Analisis Garantia</h2>
        <br />
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <h6>Filtro Busqueda</h6>
                    @Html.DropDownList("Estados", new SelectList(FiltroBusqueda, "Valor", "Descripcion"), "--Seleccione--", new { @class = "form-control", id = "SelectEstado" })
                </div>
                <div class="col-md-2">
                    <h6>Fecha Inicio</h6>
                    @*<input id="txtFechaVenta" class="date-picker form-control" placeholder="dd/mm/yyyy" type="text" required="required" onfocus="this.type='date'" onchange="CalcularProrrateo();">*@

                    <input id="txtFechaInicio" class="date-picker form-control" placeholder="dd/mm/yyyy" type="date" required="required" onfocus="this.type='date'">
                </div>
                <div class="col-md-2">
                    <h6>Fecha Fin</h6>
                    <input id="txtFechaFin" class="date-picker form-control" placeholder="dd/mm/yyyy" type="date" required="required" onfocus="this.type='date'">
                </div>

                <div class="col-md-2">
                    <h6>  </h6>
                    <button class="btn btn-primary" onclick="ConsultarReporte()">
                        <i class="loading-icon fa fa-spinner fa-spin hide"></i>
                        <span class="btn-txt">Consultar</span>
                    </button>
                </div>
                @*<div id="gridClearSelection"></div>*@
            </div>
        </div>
    </div>

    <div class="card-body">
        <div id="MensajeErrorInesperado" class="alert alert-danger collapse">
            <button id="LinkClose" type="button" class="close">&times;</button>
            <strong>Error Inesperado!</strong>
        </div>
        <div id="MensajeIngreseTodosLosCampos" class="alert alert-danger collapse">
            <button id="LinkClose2" type="button" class="close">&times;</button>
            <strong>Ingrese todos los campos!</strong>
        </div>
        <div id="MensajeSinInformacion" class="alert alert-danger collapse">
            <button id="LinkClose3" type="button" class="close">&times;</button>
            <strong>No existe información en las fechas solicitadas!</strong>
        </div>
        <div class="loader">
            <div class="form">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <canvas id="myChart" style="width:100%;max-width:700px"></canvas>
                    </div>
                    <div class="form-group col-md-6">
                        <canvas id="myChart2" style="width:100%;max-width:700px"></canvas>
                    </div>
                    <div class="form-group col-md-4"></div>
                    <div class="form-group col-md-4">
                        <div align="center">
                            <label id="lbltabladescriptiva">Tabla Descriptiva</label>
                        </div>
                        <div id="tblGridResumen"> </div>
                    </div>
                    <div class="form-group col-md-4"></div>


                </div>
            </div>

        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>

