
@{
    ViewBag.Title = "CrearUsuariosPortal";
    Layout = "~/Views/Compartida/_Layout.cshtml";
}
<br />
<div class="card shadow">
    <div class="card-header">
        <h5>Crear Usuario Portal</h5>
    </div>
    <div class="card-body">
        <div id="MensajeErrorInesperado" class="alert alert-danger collapse">
            <button id="LinkClose" type="button" class="close">&times;</button>
            <strong>Error Inesperado!</strong>
        </div>
        <div id="ActualizacionRealizada" class="alert alert-primary collapse">
            <button id="LinkClose2" type="button" class="close">&times;</button>
            <strong>Actualizacion correcta!</strong>
        </div>
        <div id="EliminacionCorrecta" class="alert alert-danger collapse">
            <button id="LinkClose3" type="button" class="close">&times;</button>
            <strong>Eliminacion Correcta!</strong>
        </div>
        <div id="IngresoCorrecto" class="alert alert-primary collapse">
            <button id="LinkClose4" type="button" class="close">&times;</button>
            <strong>Ingreso Correcto!</strong>
        </div>
        <div id="UsuarioYaRegistrado" class="alert alert-danger collapse">
            <button id="LinkClose5" type="button" class="close">&times;</button>
            <strong>El usuario ya se encuentra registrado!</strong>
        </div>
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div id="tblClientesSap"> </div>
            </div>
            <div class="col-md-3">
            </div>

        </div>

        </div>
    </div>

<div class="modal" tabindex="-1" role="dialog" id="ModalCrearUsuarioPortal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crear Usuario Portal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="NoRegistroProducto" class="alert alert-danger collapse">
                    <button id="LinkClose6" type="button" class="close">&times;</button>
                    <strong>Se debe registrar un producto como mínimo!</strong>
                </div>
               
                <div class="row">
                    <div class="col-6 col-md-12">
                        <label for="email"><b>Nombre Cliente</b></label>
                        <input type="text" placeholder="Ingresar Nombres" name="NombreCompleto" id="txtNombreUsuario" autocomplete="off" class="form-control" readonly>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 col-md-6">
                        <label for="email"><b>Usuario</b></label>
                        <input type="text" placeholder="Ingresar Usuario" name="NombreUsuario" id="txtUsuarioPortal" autocomplete="off" class="form-control" required>
                    </div>
                    <div class="col-6 col-md-6">
                        <label for="psw"><b>Contraseña</b></label>
                        <input type="password" placeholder="Ingresar Contraseña" name="contrasena" id="txtContrasenaPortal" autocomplete="off" class="form-control" required onkeyup="checkPasswordStrength();">
                        <div class="progress" style="height: 5px;">
                            <div id="passwordbar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div id="password-strength-status"></div>
                    </div>
                    <hr>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div align='center'>
                            <label for="psw"><b>Validaciones</b></label>
                            <select class="form-control" aria-label="Default select example" id="SelectValidaciones">
                                <option value="0">No</option>
                                <option value="1">Si</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="psw"><b>Lista de Precios</b></label>
                        <button type="button" class="btn btn-success" onclick="SeleccionarPreciosBaterias();">Seleccionar</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="RegistrarUsuarioPortal">Registrar</button>
                <button type="button" class="btn btn-secondary" id="CerrarUsuarioPortal" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ListaPrecioUsuarioPortal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
