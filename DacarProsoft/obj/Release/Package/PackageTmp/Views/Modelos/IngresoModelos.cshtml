
@{
    ViewBag.Title = "IngresoModelos";
    Layout = "~/Views/Compartida/_Layout.cshtml";
}
<style>
    .dx-datagrid {
        font: 11px arial;
    }

    .dx-datagrid-headers .dx-header-row {
        font: 12px arial;
        /*background-color: #007bff ;*/
        /*background-color: #3355FF;*/
        color: black;
    }
</style>
<div class="container-sm">
    <div class="card shadow">
        <div class="card-header">
            <h3>Modelos de Chatarras</h3>
            <br />
            <button class="btn btn-light" onclick="IngresarModeloChatarra()">
                <h5>Crear Modelo </h5>
            </button>
        </div>
        <div class="card-body">
            <div id="tblModelosChatarras"> </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="ModalIngresoModeloChatarra">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Ingresar Modelos de Chatarras</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group row">
                        <label for="email" class="col-sm-3 col-form-label"><b>Descripcion Chatarra</b></label>
                        <div class="col-sm-3">
                            <input type="text" name="NombreChatarra" id="txtNombreChatarra" autocomplete="off"  class="form-control">
                        </div>
                        <label for="psw" class="col-sm-3 col-form-label"><b>Peso Teorico</b></label>
                        <div class="col-sm-3">
                            <input type="number" name="NombrePeso" id="txtPesoTeorico" autocomplete="off"  class="form-control">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-secondary" onclick="CrearModeloChatarra()">Registrar</button>

            </div>
        </div>
    </div>
</div>
