
@{
    ViewBag.Title = "ConsultaIngresoChatarra";
    Layout = "~/Views/Compartida/_Layout.cshtml";
}
@{
    var ani = ViewBag.anos;
}
@{
    var grupo = ViewBag.gruposClientes;
 }
<style>
    .dx-datagrid {
        font: 11px arial;
    }

    .dx-datagrid-headers .dx-header-row {
        font: 12px arial;
        /*background-color: #007bff ;*/
        /*background-color: #3355FF;*/
        color: black;
    }
</style>

<br />
<div class="card shadow align-top">
    <div class="card-header">
        <h2>Reporte Ingresos de Chatarras</h2>
        <br />
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    <h6>Año de busqueda</h6>
                    @Html.DropDownList("Anio", new SelectList(ani, "Value", "Text"), new { @class = "form-control", id = "anioClass" })
                </div>
                @*<div class="col-md-2">
                    <h6>Tipo Cliente</h6>
                    @Html.DropDownList("Grupo", new SelectList(grupo, "Value", "Text"),"--Todos--", new { @class = "form-control", id = "grupoCliente" })
                </div>*@

                <div class="col-md-2">
                    <h6>  </h6>
                    <button class="btn btn-primary" onclick="ConsultaDeVentas()">
                        <i class="loading-icon fa fa-spinner fa-spin hide"></i>
                        <span class="btn-txt">Consultar</span>
                    </button>
                </div>
            </div>
        </div>  
    </div>
    <div class="card-body">
        <div id="IngresosChatarras"></div>
    </div>
</div>


<div class="modal" tabindex="-1" role="dialog" id="ModalDetalleChatarraLocal">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Reporte Ingreso Chatarra</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="MensajeErrorInesperado" class="alert alert-danger collapse">
                    <button id="LinkClose" type="button" class="close">&times;</button>
                    <strong>Error Inesperado!</strong>
                </div>
                <div align="center">
                    <img id="cargaImg" src="~/Images/dacaritogif.gif" width="150" height="150" />
                </div> 

                <div id="IngresosDetallesChatarrasLocal"></div>

                </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>

            </div>
        </div>
    </div>
</div>

<input type="hidden" id="txtPesoIngresado" />
<input type="hidden" id="txtPesoTeorico" />
