
@{
    ViewBag.Title = "AdministrarHistoricoChatarra";
    Layout = "~/Views/Compartida/_Layout.cshtml";
}
<br />

<div class="card shadow align-top">
    <div class="card-header">
        <h2>Actualizar Historico Chatarra</h2>
        <br />

        <button class="btn btn-primary" onclick="ActualizarRegistros()">
            <i class="loading-icon fa fa-spinner fa-spin hide"></i>
            <span class="btn-txt">Actualizar tabla</span>
        </button>
    </div>
    <div class="card-body">
        <div id="MensajeErrorInesperado" class="alert alert-danger collapse">
            <button id="LinkClose2" type="button" class="close">&times;</button>
            <strong>Error Inesperado!</strong>
        </div>
        <div id="MensajeActulalizacionCorrecta" class="alert alert-primary collapse">
            <button id="LinkClose9" type="button" class="close">&times;</button>
            <strong>Actualizacion exitosa</strong>
        </div>
        <div id="MensajeActualizacionIncorrecta" class="alert alert-danger collapse">
            <button id="LinkClose8" type="button" class="close">&times;</button>
            <strong>Los datos ya se encuentran actualizados!</strong>
        </div>
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-8">
                <div id="tblHistoricoChatarra"></div>
            </div>
            <div class="col-2">
            </div>
        </div>
    </div>
</div>
